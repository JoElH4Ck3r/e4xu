<?xml version="1.0" encoding="UTF-8"?>
<services-config>
	<services>
		<service id="amfphp-flashremoting-service" 
			class="flex.messaging.services.RemotingService" 
			messageTypes="flex.messaging.messages.RemotingMessage">
			<destination id="amfphp">
				<channels>
					<channel ref="my-amfphp"/>
				</channels>
				<properties>
					<source>*</source>
				</properties>
			</destination>
		</service>
		<service id="zend-flashremoting-service" 
			class="flex.messaging.services.RemotingService" 
			messageTypes="flex.messaging.messages.RemotingMessage">
			<destination id="zend">
				<channels>
					<channel ref="my-zend"/>
				</channels>
				<properties>
					<source>*</source>
				</properties>
			</destination>
		</service>
	</services>
	<channels>
		<!-- mx.messaging.channels.AMFChannel -->
		<channel-definition id="my-amfphp" class="org.wvxvws.net.Channel">
			<endpoint uri="http://localhost/amfphp/gateway.php" 
				class="flex.messaging.endpoints.AMFEndpoint"/>
		</channel-definition>
		<channel-definition id="my-zend" class="org.wvxvws.net.Channel">
			<endpoint uri="http://localhost/zendf/public/" 
				class="flex.messaging.endpoints.AMFEndpoint"/>
		</channel-definition>
	</channels>
</services-config>